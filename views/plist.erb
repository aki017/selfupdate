<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>items</key>
    <array>
      <dict>
        <key>assets</key>
        <array>
          <dict>
            <key>kind</key>
            <string>software-package</string>
            <key>url</key>
            <string><%= @url %></string>
          </dict>
          <dict>
            <key>kind</key>
            <string>display-image</string>
            <key>needs-shine</key>
            <false/>
            <key>url</key>
            <string><%= @icon %></string>
          </dict>
          <dict>
            <key>kind</key>
            <string>full-size-image</string>
            <key>needs-shine</key>
            <false/>
            <key>url</key>
            <string><%= @full %></string>
          </dict>
        </array><key>metadata</key>
        <dict>
          <key>bundle-identifier</key>
          <string><%= @bundle %></string>
          <key>kind</key>
          <string>software</string>

          <key>subtitle</key>
          <string><%= @subtitle %></string>

          <key>title</key>
          <string><%= @title %></string>
        </dict>
      </dict>
    </array>
  </dict>
</plist>
